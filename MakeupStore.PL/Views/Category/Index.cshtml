@model IEnumerable<ProductCategoryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Categories</h1>
<br />
<a asp-action="AddCategory" class="btn btn-primary">create new category</a>
<br />
<br />

@* <div class="alert alert-danger">
    <h3>@ViewData["Message"]</h3>
</div> *@
@if(TempData["Message"] != null)
{
    <div class="alert alert-success">
        <h3>@TempData["Message"]</h3>
    </div>
}

@* <div class="alert alert-success">
    <h3>@ViewBag.MessageBag</h3>
</div> *@


@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>Details</th>
                <th>update</th>
                <th>delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Category" asp-action="Details" 
                        asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Category" asp-action="Update"
                           asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete"
                           asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Categories found!!</h3>
    </div>
}

