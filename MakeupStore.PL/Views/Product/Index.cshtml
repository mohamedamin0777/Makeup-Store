@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Products";

}
<h1>Available Products</h1><br />

<a asp-action="AddProduct" class="btn btn-success">
    Add New Product <i class="bi bi-plus-circle-dotted"></i>
</a>
@if (Model?.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="row w-75">
            <div class="col-4 align-content-center">
                <div class="card">
                    <div class="card-img d-block">
                        <img src="~/Files/Images/@item.PictureUrl" class="card-img-top mx-auto" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(x => item.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(x => item.Description)</p>
                        <a href="#" class="btn btn-primary">Buy Now</a>
                    </div>
                </div>
            </div>


         </div>

    }

}
