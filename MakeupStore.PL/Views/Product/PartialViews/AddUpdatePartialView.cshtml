@model ProductViewModel
@{
    var categories = new SelectList(ViewBag.categories, "Id", "Name");
    var brands = new SelectList(ViewBag.brands, "Id", "Name");


}
<div class="form-group has-danger">
    <label asp-for="@Model.Name" class="col-form-label"></label>
    <input asp-for="@Model.Name" class="form-control" />
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Description" class="col-form-label"></label>
    <input asp-for="@Model.Description" class="form-control" />
    <span asp-validation-for="@Model.Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Price" class="col-form-label"></label>
    <input asp-for="@Model.Price" class="form-control" />
    <span asp-validation-for="@Model.Price" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.ProductCategoryId" class="form-label mt-4">Category</label>
    <select asp-for="@Model.ProductCategoryId" class="form-select" asp-items="categories">
        <option>--- Select Category ---</option>
    </select>
    <span asp-validation-for="@Model.ProductCategoryId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.ProductBrandId" class="form-label mt-4">Brand</label>
    <select asp-for="@Model.ProductBrandId" class="form-select" asp-items="brands">
        <option>--- Select Brand ---</option>
    </select>
    <span asp-validation-for="@Model.ProductBrandId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.Image" class="form-label mt-4"></label>
    <input type="file" asp-for="@Model.Image" class="form-control">
    <span asp-validation-for="@Model.Image" class="text-danger"></span>

</div>


